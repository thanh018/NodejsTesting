<% layout('layout') %>
<div class="page-content-wrapper">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="row">
        <div class="form-group">
          <a  class="form-control btn btn-primary add-customer" href="/">Add a customer </a>
        </div>
        <h4 class="main-title">Edit a customer</h4>

        <p id="customer-id" style="font-size: 0"><%= customer._id %></p>
        <div class="col-md-offset-4 col-md-8">
          <form method="POST" action="/detail/<%= customer._id %>">
            <div class="col-md-12">
              <div class="col-md-6">
                <div class="form-group ">
                  <label for="">First Name</label>
                  <input id="firstname" class="form-control" value="<%= customer.firstname %>" value="firstname" type="text">
                  <span id="errorMsg1"></span>
                </div>
              </div>
              <div class="col-md-6">
                  <div class="form-group ">
                  <label for="">Last Name</label>
                  <input id="lastname" class="form-control" value="<%= customer.lastname %>" name="lastname" type="text">
                  <span id="errorMsg2"></span>
                </div>
              </div>
            </div>

            <div class="col-md-12">
            <div class="col-md-6">
              <div class="form-group ">
                <label for="">Email</label>
                <input id="email" class="form-control" value="<%= customer.email %>" name="email" type="text">
                <span id="errorMsg3"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label for="">ID number</label>
                <input id="idNumber" class="form-control" value="<%= customer.idNumber %>" name="idNumber" type="text">
                <span id="errorMsg4"></span>
              </div>
            </div>
            </div>

            <div class="col-md-12">
            <div class="col-md-6">
              <div class="form-group ">
                <label for="">Phone</label>
                <input id="phone" class="form-control" value="<%= customer.phone %>" name="phone" type="text">
                <span id="errorMsg5"></span>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label for="">Address</label>
                <input id="address" class="form-control" value="<%= customer.address %>" name="address" type="text">
                <span id="errorMsg6"></span>
              </div>
            </div>
            </div>

            <div class="col-md-12">
              <div class="col-md-6"></div>
              <div class="col-md-3">
                <div class="form-group">
                  <input type="submit" id="change" value="change" class="form-control btn btn-warning button-submit" name="change">
                </div>
              </div>

              <div class="col-md-3">
                <div class="form-group">
                  <input type="submit" id="delete" value="delete" class="form-control btn btn-danger button-submit" name="delete">
                </div>
              </div>
              
            </div>
          </form>
          <div class="col-md-12">
              <div class="col-md-6"></div>
              
              
        </div>
      </div>

      <div class="row">
        <h4 class="main-title">List Customers</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i< customers.length; i++) { %>
              <tr>
                <td><a href="/detail/<%=customers[i]._id %>"><%= customers[i].firstname + " " + customers[i].lastname %></a></td>
                <td><a href="/detail/<%=customers[i]._id %>"><%= customers[i].email %></a></td>
                <td><a href="/detail/<%=customers[i]._id %>"><%= customers[i].phone %></a></td>
                <td><a href="/detail/<%=customers[i]._id %>"><%= customers[i].date %></a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
  </div>
</div>
